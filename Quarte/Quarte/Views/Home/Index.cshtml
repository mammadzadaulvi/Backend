<!-- PRODUCT SLIDER AREA START -->
<div class="ltn__product-slider-area ltn__product-gutter pt-115 pb-90 plr--7">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title-area ltn__section-title-2--- text-center">
                    <h6 class="section-subtitle section-subtitle-2 ltn__secondary-color">Properties</h6>
                    <h1 class="section-title">Featured Listings</h1>
                </div>
            </div>
        </div>
        <div class="row ltn__product-slider-item-four-active-full-width slick-arrow-1">
            @foreach (var item in Model.Products)
            {
                <div class="col-lg-12">
                    <div class="ltn__product-item ltn__product-item-4 text-center---">
                        <div class="product-img">
                            <a asp-controller="product" asp-action="detail" asp-route-id="@item.Id"><img src="~/uploads/product/@item.ProductImages.FirstOrDefault(x=>x.IsPoster==true)?.Image" alt="#"></a>
                            <div class="product-badge">
                                <ul>
                                    <li class="sale-badge bg-green">For @item.Status.Name</li>
                                </ul>
                            </div>
                            <div class="product-img-location-gallery">
                                <div class="product-img-location">
                                    <ul>
                                        <li>
                                            <a href="locations.html"><i class="flaticon-pin"></i> @item.City.Name</a>
                                        </li>
                                    </ul>
                                </div>
                                <div class="product-img-gallery">
                                    <ul>
                                        <li>
                                            <a asp-controller="product" asp-action="detail" asp-route-id="@item.Id"><i class="fas fa-camera"></i> @item.ProductImages.Count()</a>
                                        </li>
                                        
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="product-info">
                            <div class="product-price">
                                <span>
                                    $@item.SalePrice
                                    @if (item.Status.Name == "Rent")
                                    {
                                        <label>/Month</label>
                                    }
                                </span>
                            </div>
                            <h2 class="product-title"  style="min-height:70px"><a asp-controller="product" asp-action="detail" asp-route-id="@item.Id">@item.Name</a></h2>
                            <div class="product-description" style="min-height:150px">
                                <p>
                                    @item.Desc
                                </p>
                            </div>
                            <ul class="ltn__list-item-2 ltn__list-item-2-before">
                                <li>
                                    <span>@item.Beds <i class="flaticon-bed"></i></span>
                                    Bedrooms
                                </li>
                                <li>
                                    <span>@item.Baths <i class="flaticon-clean"></i></span>
                                    Bathrooms
                                </li>
                                <li>
                                    <span>@item.HomeArea <i class="flaticon-square-shape-design-interface-tool-symbol"></i></span>
                                    square Ft
                                </li>
                            </ul>
                        </div>
                        <div class="product-info-bottom">
                            <div class="real-estate-agent">
                                <div class="agent-img">
                                    <a href="team-details.html"><img src="~/uploads/team/@item.Team.Image" alt="#"></a>
                                </div>
                                <div class="agent-brief">
                                    <h6><a href="team-details.html">@item.Team.FullName</a></h6>
                                    <small>Sale Manager </small>
                                </div>
                            </div>
                            <div class="product-hover-action">
                                <ul>
                                    <li>
                                        <a href="#" class="show-product-modal" data-id="@item.Id" title="Quick View" data-bs-toggle="modal" data-bs-target="#quick_view_modal">
                                            <i class="flaticon-expand"></i>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#" title="Wishlist" data-bs-toggle="modal" data-bs-target="#liton_wishlist_modal" class="add-wishlist-btn" data-id="@item.Id">
                                            <i class="flaticon-heart-1"></i>
                                        </a>
                                    </li>
                                    <li>
                                        <a asp-controller="product" asp-action="detail" asp-route-id="@item.Id" title="Product Details">
                                            <i class="flaticon-add"></i>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>

            }

        </div>
    </div>
</div>
<!-- PRODUCT SLIDER AREA END -->

